<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/styles/style.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oleo+Script&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oleo+Script&family=PT+Sans&display=swap" rel="stylesheet">
</head>
<body>
    <header class="container-fluid bg-primary">
        <div class="row">
            <div class="col-sm-3">
                <a href="/Home/" id="brandName"> <img src="~/Images/logo.png" id="logo" /><span>Get@Gate</span></a>
            </div>
            <div class="col-sm-5">
                <ul class="nav" id="myNavbar">
                    <li class="nav-item"><a href="/Home/index" class="navbar-link bg-primary">Home</a></li>
                    <li class="nav-item"><a href="" class="navbar-link bg-primary">Account</a></li>
                    <li class="nav-item"><a href="#contactUs" class="navbar-link bg-primary">Contact Us</a></li>
                    <li class="nav-item">
                        <a href="#" class="navbar-link bg-primary">
                            Notification
                            <span class="position-absolute top-4 start-97 translate-middle badge rounded-pill bg-danger">
                                99+
                                <span class="visually-hidden">unread messages</span>
                            </span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href='/Home/MyCart?id=@Session["uid"]' class="navbar-link bg-primary">
                            Mycart
                            <span class="position-absolute top-4 start-97 translate-middle badge rounded-pill bg-danger">
                                2
                                <span class="visually-hidden">unread messages</span>
                            </span>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="col-sm-4">
                <div class="Profile">
                    @if (Session["uname"] != null)
                    {
                        <span>@Session["uname"].ToString()</span>
                    }
                    else
                    {
                        <span><a href="/Register/CreateAccount/" id="loginOpt">Login</a></span>
                    }
                    <img src="~/Images/avatar-370-456322 (1).png" id="profileIcon" />
                </div>
            </div>
        </div>

    </header>


    <div class="container-fluid">
        <div class="row text-center">
            <h4 class="h4">Admin page</h4>
        </div>
        <div class="row">
            <div class="col-2 mt-5">
                <button type="submit" class="btn btn-primary w-100"><a href="" class="text-white">Product</a></button>
                <button type="submit" class="btn btn-primary w-100"><a href="" class="text-white">Category</a></button>
            </div>
            <div class="col-10 ">
                @RenderBody()
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/jquery-3.4.1.min.js"></script>
</body>
</html>