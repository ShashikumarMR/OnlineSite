@model OnlineSiteModel.Models.Products
@{
    ViewBag.Title = "ProdDetail";
}
@{
    var url = @ViewBag.ProdUrl;
}


<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Images/slide1.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/Images/slide2.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/Images/slide3.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<div class="container-fluid p-3">
    <div class="row">
        <div class="col-sm-3">
            <button class="btn btn-primary filterBtn mr-5" data-bs-toggle="collapse" href="#filterBar" role="button" aria-expanded="false" aria-controls="filterCollapse">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-filter" viewBox="0 0 16 16">
                    <path d="M6 10.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5zm-2-3a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm-2-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5z" />
                </svg>
                <span class="fs-4 fw-bold">filter</span>
            </button>
        </div>
        <form class="col-sm-5 form-group-sm mt-2" role="form">
            <div class="input-group">
                <input class="form-control p-2 w-50 " type="text" />
                <button type="submit" class="btn-sm btn-success">search</button>
            </div>
        </form>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 filterBar text-center p-3" id="filterBar">
            <form action="" method="post" role="form" class="form-horizontal">
                <div class="form-group-sm mb-3">
                    <label for="pname" class="control-label">Product Name</label>
                    <input type="text" class="form-control w-75 mx-auto" placeholder="Exa: MI lite" id="pname" name="pname" />
                </div>
                <div class="form-group-sm mb-3">
                    <label for="pname" class="control-label">Select Category</label>
                    <select class="form-select form-select-lg mb-3 w-75 mx-auto" aria-label=".form-select-lg example" name="category" id="category">
                        <option selected>Mobile</option>
                        <option value="1">clothes</option>
                        <option value="2">toys</option>
                        <option value="3">home utensils</option>
                    </select>
                </div>
                <div class="form-group-sm mb-3">
                    <label for="priceRange" class="control-label">Price range</label>
                    <input type="range" class="form-range w-75 mx-auto" placeholder="Exa: MI lite" id="priceRange" name="priceRange" value="1" min="1" max="10000" oninput="this.nextElementSibling.value = this.value" />
                    <output>1</output>
                </div>
                <div class="form-group-sm mb-3">
                    <input type="checkbox" class="form-checkbox" />
                    <label for="priceRange" class="control-label">Availability check!</label>
                </div>
                <button type="submit" class="btn btn-success">Apply</button>
            </form>
            <hr />
            <p class="h5">Our latest coupons</p>
            <p>summer offer:</p>
            <div class="well w-75 mx-auto h2">SUMMER2022</div>
            <p>Frist 5 purchase?</p>
            <div class="well w-75 mx-auto h2">FIRST5</div>
            <hr />
            <form class="form-horizontal" role="form" method="post" action="">
                <p>Your comments are appreciated..</p>
                <textarea class="form-control w-75 mx-auto" rows="4"></textarea>
                <button type="submit" class="btn-sm btn-success border-1" data-toggle="modal" data-target=".thanksSay">Comment</button>
                <div class="modal fade thanksSay" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-sm">
                        <div class="modal-content">
                            Thanks for commenting!!
                        </div>
                    </div>
                </div>
            </form>
            <hr />
            <div class="h3">Contact details</div>
            <address class="address border-1">
                #675 Vidyashri building
                Near to nice road
                Banglore,588009
                Karnataka
            </address>
        </div>
        <div class="col-sm-8 m-2">
            <div class="row">
                <div class="col-sm-4">
                    <img src=@url alt="product" class="img-responsive img-rounded mx-auto" /><br />
                    <div class="row justify-content-center" target="/Home/AddMyCart">
           
                        <button class="btn btn-primary w-25 m-2 p-2"><a href='/Home/AddMyCart?id=@Model.ProductID.ToString()' class="btnText text-white">Add cart</a></button>
                        <button class="btn btn-primary w-25 m-2 p-2">Buy now</button>
                        <p class="text-danger">@TempData["msg"]</p>
                    </div>
                </div>
                <div class="col-sm-8 text-center">
                    <div class="jumbotron jumbotron-fluid">
                        <h4 class="display-4">@Model.productName</h4>
                        <p class="lead mt-2">
                            Price : @Model.price<span>
                                <img src="~/Images/currency-dollar.svg" />
                            </span>
                        </p>             <p class="lead  mt-2">Weight: @Model.weight kg</p>

                    </div>
                    <h6 class="h5">Product description:</h6>
                    <p>@Model.Description</p>

                </div>
            </div>
            <hr />
            <h3 class="text-center">Customer Reviews</h3>
            <div class="row m-3">
                <div class="media">
                    <div class="media-left">
                        <img src="~/Images/user1.png" />
                    </div>
                    <div class="media-body">
                        Amazing purchase!!
                    </div>
                </div>
            </div>
            <div class="row m-3 shadow-sm">
                <div class="media">
                    <div class="media-left">
                        <img src="~/Images/user2.png" />
                    </div>
                    <div class="media-body">
                       Thanks Get@Gate, fast delivary withing a day.
                    </div>
                </div>
            </div>
            <div class="row m-3 shadow-sm">
                <div class="media">
                    <div class="media-left align-content-center">
                        <img src="~/Images/user3.png" />
                    </div>
                    <div class="media-body">
                        superb product, Completely satisfied.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


