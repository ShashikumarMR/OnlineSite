
@{
    ViewBag.Title = "NewAccount";
}

<div class="container">
    <div class="row justify-content-center text-center">
        <div class="col-9 col-lg-4 col-md-5 col-sm-8 mx-auto shadow-lg my-5 justify-content-center">
            <form class="form-horizontal  m-5" action="/AddUser/NewAccount" method="post">
                @Html.AntiForgeryToken()
                <h3>Register</h3>
                <div class="form-group-sm mb-3">
                    <label for="uname" class="control-label mb-3">Enter your name</label>
                    <input type="text" class="form-control" placeholder="Name" name="uname" required />
                </div>
                <div class="form-group-sm mb-3">
                    <label for="mnumber" class="control-label mb-3">Mobile number</label>
                    <input type="number" class="form-control" placeholder="Mobile no" name="mnumber" required />
                </div>
                <div class="form-group-sm mb-3">
                    <label for="pw" class="control-label mb-3">Password</label>
                    <input type="password" class="form-control" placeholder="******" name="pw" required />
                </div>
                <div class="form-group-sm mb-3">
                    <label for="cpw" class="control-label mb-3">Confirm password</label>
                    <input type="password" class="form-control" placeholder="******" name="cpw" required />
                </div>
                <div class="form-group-sm mb-3">
                    <label for="address" class="control-label mb-3">Address</label>
                    <input type="text" class="form-control" placeholder="address" name="address" required />
                </div>
                <button type="submit" class="btn btn-primary mx-auto">Register</button>
            </form>
            <p class="text-danger">@ViewBag.FailedRegister</p>
        </div>
    </div>
</div>
