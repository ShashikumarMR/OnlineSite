
@{
    ViewBag.Title = "CreateAccount";
}

<div class="container">
    <div class="row justify-content-center text-center">
        <div class="col-9 col-lg-4 col-md-5 col-sm-8 mx-auto shadow-lg my-5 justify-content-center">
            <form class="form-horizontal  m-5" action="" method="post">
                @Html.AntiForgeryToken()
                <h3>Login</h3>
                <div class="form-group input-group mb-3">
                    <span class="input-group-addon">
                        <img src="~/Images/person-circle.svg" />
                    </span>
                    <input type="text" class="form-control" name="uname" placeholder="User name" required />
                </div>
                <div class="form-group input-group mb-3">
                    <span class="input-group-addon">
                        <img src="~/Images/file-ppt.svg" />
                    </span>
                    <input type="password" class="form-control" name="pw" placeholder="password" required />
                </div>
                <div class="form-check mb-3 text-start">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked">
                    <label class="form-check-label" for="flexCheckChecked">
                        Remember me.
                    </label>
                </div>
                <button type="submit" class="btn btn-primary mx-auto">Login</button>
            </form>
            <p class="text-danger">@ViewBag.FailedLogin</p>
            <p class="mx-auto">New user? <br /> Please <a href="/AddUser/NewAccount"><strong>Regiser</strong></a></p>
        </div>
    </div>
</div>